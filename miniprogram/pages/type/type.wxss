.title{
  text-align: center;
  font-size: 1.5rem;
  font-weight: bolder;
}
.goods_container{
  margin-top: 1rem;
  display: flex;
  width: 100%;
  padding: 5px;
  border-bottom: 1px solid #ccc;
}
.goods_container image{
  width: 40%;
  height: 8rem;
}
.font{
  margin-left: 5px;
  display: flex;
  flex-direction: column;
}
.font text{
  margin-top: 10px;
}
.font .h1{
  margin-top: 0px;
  font-size: 1.2rem;
  font-weight: bold;
}
.font .count{
  opacity: 0.5;
}
.font .price{
  font-size: 1.1rem;
  color: rgb(255, 115, 0);
}
.buy{
  width: 1.5rem !important;
  height: 1.5rem !important;
  margin-left: 9rem;
  
}